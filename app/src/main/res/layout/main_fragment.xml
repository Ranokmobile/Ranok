<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.ranok.ui.main.main_fragment.MainVM" />

    </data>

    <com.google.android.flexbox.FlexboxLayout
        app:flexWrap="wrap_reverse"
        app:alignItems="center"
        app:alignContent="space_around"
        app:flexDirection="row_reverse"
        app:justifyContent="space_around"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="@dimen/menu_panel_width"
            android:layout_height="@dimen/menu_panel_height"
            android:elevation="4dp"
            android:background="@drawable/gray_btn_selector"
            android:onClick="@{viewModel::onClick}"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_package_variant_closed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Сдача посылок"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />


        </android.support.constraint.ConstraintLayout>

    </com.google.android.flexbox.FlexboxLayout>
</layout>
