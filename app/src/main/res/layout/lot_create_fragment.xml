                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivInputCheck1"
                app:layout_constraintTop_toBottomOf="@+id/tvHeader1" />
        </android.support.constraint.ConstraintLayout>
